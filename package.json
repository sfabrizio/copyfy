{
  "name": "copyfy",
  "version": "0.0.0",
  "description": "Copy files/folders recursively on nodejs using a json as config.",
  "main": "index.js",
  "scripts": {
    "start": "node --harmony --experimental-modules index.mjs",
    "test": "jasmine-node --verbose --captureExceptions test",
    "test:watch": "npm test & onchange lib/*.js test/* -- npm test",
    "coverage": "nyc report --reporter=text-lcov > coverage.json",
    "lint": "eslint lib test bin index.js",
    "lint:fix": "eslint lib test bin index.js --fix",
    "lint:watch": "npm run lint && onchange lib/*.js test/*.js index.js -- npm run lint",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "build": "babel --presets es2017 lib -d bin"
  },
  "dependencies": {
    "colors": "^1.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2017": "^6.24.1",
    "eslint": "^4.0.0",
    "husky": "^0.13.4",
    "jasmine-node": "^1.14.5",
    "lint-staged": "^4.0.0",
    "nyc": "^11.0.2",
    "onchange": "^3.2.1"
  },
  "engines": {
    "node": "8"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sfabrizio/copyfy.git"
  },
  "keywords": [
    "copyfy",
    "copy",
    "files",
    "folders"
  ],
  "author": "Samuel Fabrizio <samuelfabrizio@gmail.com>>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sfabrizio/copyfy.git/issues"
  },
  "homepage": "https://github.com/sfabrizio/copyfy.git/readme"
}
